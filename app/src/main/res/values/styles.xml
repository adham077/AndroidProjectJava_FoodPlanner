<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="meal_image_desc">Meal presentation image</string>
    <string name="ingredients">Ingredients</string>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here -->
    </style>


    <style name="BottomNavTextActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PistachioCalendarTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/primary_pistachio</item>
        <item name="android:colorBackground">@color/background_cream</item>
        <item name="android:textColorPrimary">@color/secondary_brown</item>
        <item name="android:textColorSecondary">@color/primary_dark</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="MealDetailHeader">
        <item name="android:textSize">20sp</item>
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="MealDetailBody">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        android:textStyle="normal"
        android:fontFamily="sans-serif"
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="ShapeAppearanceOverlay.RoundedCircle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="PistachioDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primary_pistachio</item>
        <item name="colorOnPrimary">@color/surface_white</item>
        <item name="colorSurface">@color/surface_white</item>
        <item name="android:windowBackground">@color/background_cream</item>
    </style>

</resources>