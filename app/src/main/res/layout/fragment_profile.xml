<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_cream">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/surface_white"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/secondary_brown"
            tools:text="John Doe"/>

        <ImageButton
            android:id="@+id/btnEditName"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_edit"
            app:tint="@color/primary_pistachio"/>
    </LinearLayout>

    <!-- Additional Buttons -->
    <Button
        android:id="@+id/btnFavoriteMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/secondary_beige"
        android:textColor="@color/secondary_brown"
        android:text="Favorite Meals"/>

    <Button
        android:id="@+id/btnPlannedMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/secondary_beige"
        android:textColor="@color/secondary_brown"
        android:text="Planned Meals"/>


    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/primary_pistachio"
        android:textColor="@color/surface_white"
        android:text="Logout"/>

</LinearLayout>